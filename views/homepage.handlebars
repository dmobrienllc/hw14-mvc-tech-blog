<!-- Loop over each object in the projects array -->
{{#each posts as |post| }}
<div class="row mb-4 post">
  <div class="col-md-10">
    <h2>
      {{{get_emoji}}}
      <a href="/posts/{{post.id}}">{{post.post_title}}</a>
    </h2>
    <p>Created by {{post.user.user_name}} on {{format_date post.created_at}}</p>
  </div>
</div>
{{/each}}
